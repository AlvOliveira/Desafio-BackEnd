{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mottomrdb;Username=mottomruser;Password=mottomrpass"
  },
  "RabbitMQ": {
    "DefaultConnection": "localhost",
    "Port": 5672,
    "Queue": "registered_motorcycle"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.log",
          "encoding": "System.Text.Encoding::UTF8",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message} <{ThreadId}> <{ThreadName}>{NewLine}{Exception}",
          "rollingInterval": "Month",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": "4194304",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
